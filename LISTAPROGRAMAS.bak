#define DELTA 5

class ListaProgramas{
	private:
		int total;
		int max;
		Programa *Data;

	private:
		void crecer();

	public:
		ListaProgramas();
		~ListaProgramas();
		void insertar();
		//void buscar();
		//void mostrar();
};

ListaProgramas::ListaProgramas(){
	total = 0;
	max = 0;
	Data = NULL;
}


ListaProgramas::~ListaProgramas(){
	if(total > 0)
		delete[] Data;

	total = 0;
	max = 0;
	Data = NULL;
}

void ListaProgramas::crecer(){
	Programa *aux;

	max += DELTA;
	for (int i = 0; i < total; ++i)
		aux[i] = Data[i];

	if(total > 0)
		delete [] Data;

	Data = aux;
}


void ListaProgramas::insertar(Programa P){
	if(total == max)
		ListaProgramas::crecer();

	Data[total] = P;
	total++;
}